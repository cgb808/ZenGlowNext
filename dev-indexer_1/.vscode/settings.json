// NOTE: If you change workspace settings, also add a brief note in .github/copilot-instructions.md (Settings sync policy).
// Context: Formatters/validators are disabled and vendored CI folders are excluded to reduce editor noise; re-enable selectively as needed.
{
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportPrivateUsage": "none",
    "reportUnknownMemberType": "none",
    "reportUnknownVariableType": "none"
  },
  "python.analysis.exclude": ["/usr/**", "**/.venv*/**", "**/site-packages/**"],
  "python-envs.pythonProjects": [
    {
      "path": "",
      "envManager": "ms-python.python:venv",
      "packageManager": "ms-python.python:pip"
    }
  ],
  "editor.defaultFormatter": null,
  "editor.formatOnSave": false,
  "editor.autoIndent": "full",
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "[python]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false,
    "editor.tabSize": 4
  },
  "[yaml]": {
  "editor.defaultFormatter": null,
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[json]": { "editor.defaultFormatter": null },
  "[jsonc]": { "editor.defaultFormatter": null },
  "[markdown]": { "editor.defaultFormatter": null },
  "[javascript]": { "editor.defaultFormatter": null },
  "[javascriptreact]": { "editor.defaultFormatter": null },
  "[typescript]": { "editor.defaultFormatter": null },
  "[typescriptreact]": { "editor.defaultFormatter": null },
  "prettier.useTabs": false,
  "prettier.tabWidth": 2,
  "prettier.printWidth": 100,
  "prettier.trailingComma": "all",
  "yaml.format.enable": false,
  "yaml.validate": false,
  "yaml.schemaStore.enable": false,
  "yaml.schemas": {},
  "files.associations": {},
  "files.exclude": {
    "**/.github/**": true,
    "**/node_modules/**": true,
    "whisper.cpp/.github/**": true,
    "vendor/whisper.cpp/.github/**": true
  },
  "search.exclude": {
    "**/.github/**": true,
    "**/node_modules/**": true,
    "whisper.cpp/.github/**": true,
    "vendor/whisper.cpp/.github/**": true
  },
  "files.trimTrailingWhitespace": false,
  "files.insertFinalNewline": false,
  "files.eol": "\n"
}
