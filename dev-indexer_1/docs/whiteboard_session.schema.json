{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/schemas/whiteboard_session.schema.json",
  "title": "Whiteboard Session",
  "type": "object",
  "required": ["version", "session_id", "events"],
  "properties": {
    "version": { "type": "string", "const": "v1" },
    "session_id": { "type": "string", "minLength": 1 },
    "audio": {
      "type": "object",
      "properties": {
        "sha256": { "type": "string" },
        "uri": { "type": "string" }
      },
      "additionalProperties": true
    },
    "events": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["t", "type"],
        "properties": {
          "t": { "type": "integer", "minimum": 0 },
          "type": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
