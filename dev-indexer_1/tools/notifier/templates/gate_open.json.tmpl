{
  "method": "POST",
  "url": "{{ env "EDGE_URL" }}",
  "headers": {
    "Authorization": "Bearer {{ env "EDGE_TOKEN" }}",
    "Content-Type": "application/json"
  },
  "body": {
    "action": "publish",
    "channel": "ingest_updates",
  "message": "{{ tojson (dict "event" "gate.open" "batch_tag" .batch_tag "spool" .spool "bytes" .bytes "count" .count "pii" (coalesce .pii false) "ts" (coalesce .ts (epoch))) }}"
  }
}
